<% layout("layouts/boilerplate") %>
<body>
  <form action="/listing/<%= listing._id %>?_method=PUT" method="post">
    <div class="col-8 offset-2">
      <h2>Update your data :</h2>
      <div class="form-group">
        <label for="title" class="form-label">Add title : </label>
        <input
          type="text"
          class="form-control border border-dark"
          name="listing[title]"
          value="<%= listing.title %>"
          required
        />
      </div>
      <div class="form-group">
        <label for="title" class="form-label">Add description : </label>
        <textarea
          name="listing[description]"
          cols="20"
          rows="6"
          class="form-control border border-dark"
        ><%= listing.description %></textarea>
        required
      </div>
      <div class="form-group">
        <label for="title" class="form-label">Add image : </label>
        <input
          type="text"
          class="form-control border border-dark"
          name="listing[image]"
          value="<%= listing.image %>"
          required
        />
      </div>
      <div class="row">
      <div class="form-group col-md-4">
        <label for="title" class="form-label">Add price : </label>
        <input
          type="text"
          class="form-control border border-dark"
          name="listing[price]"
          value="<%= listing.price %>"
          required
        />
      </div>
      <div class="form-group col-md-8">
        <label for="title" class="form-label">Add Country : </label>
        <input
          type="text"
          class="form-control border border-dark"
          name="listing[country]"
          value="<%= listing.country %>"
          required
        />
      </div>
      </div>
      <div class="form-group">
        <label for="title" class="form-label">Add Location : </label>
        <input
          type="text"
          class="form-control border border-dark"
          name="listing[location]"
          value="<%= listing.location %>"
          required
        />
      </div>
      <button type="submit" class="btn btn-outline-success">
        Update
      </button>
    </div>
  </form>
</body>
